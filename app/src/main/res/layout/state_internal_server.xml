<?xml version="1.0" encoding="utf-8"?>
<com.erif.quickstates.QuickStateView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quickState2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    app:srcLayout="@layout/error_lottie"
    android:subtitle="@string/message_example"
    app:subtitleTextSize="16sp"
    app:subtitleFontFamily="@font/montserrat">

    <com.google.android.material.button.MaterialButton
        android:id="@id/quickStateButtonRight"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        app:icon="@drawable/ic_retry"
        android:layout_marginTop="30dp"/>

</com.erif.quickstates.QuickStateView>