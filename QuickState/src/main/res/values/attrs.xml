<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="QuickStateView">

        <attr name="android:padding"/>

        <attr name="android:src"/>
        <attr name="srcLayout" format="reference"/>
        <attr name="imageScale" format="enum">
            <enum name="defaultScale" value="0"/>
            <enum name="S1x1" value="1"/>
            <enum name="S16x9" value="2"/>
        </attr>
        <attr name="avdRepeat" format="boolean"/>

        <attr name="imageWidth" format="dimension"/>
        <attr name="android:title"/>
        <attr name="android:titleTextColor"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleFontFamily" format="reference"/>

        <attr name="android:subtitle"/>
        <attr name="android:subtitleTextColor"/>
        <attr name="subtitleTextSize" format="dimension"/>
        <attr name="subtitleFontFamily" format="reference"/>

    </declare-styleable>

</resources>